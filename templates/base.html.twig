<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <title>{% block title %}Invoice Reader{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <style>
            @media (max-width: 768px) {
                .navbar-brand {
                    font-size: 1.1rem;
                }
                .nav-link {
                    padding: 0.5rem 0.5rem;
                }
                .container {
                    padding-left: 15px;
                    padding-right: 15px;
                }
            }
            .card {
                height: 100%;
                display: flex;
                flex-direction: column;
            }
            .card-footer {
                margin-top: auto;
            }
        </style>
        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_store_index') }}">Invoice Reader</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_invoice_list') }}">Invoices</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_invoice_search') }}">Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_invoice_rapport') }}">Rapport</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_store_index') }}">Stores</a>
                        </li>
                    </ul>
                    {% if app.user %}
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <span class="nav-link text-light">Welcome, {{ app.user.userIdentifier }}</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </div>
        </nav>

        <div class="container">
            {% block body %}{% endblock %}
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
